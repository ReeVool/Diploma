<Page x:Class="Diploma.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diploma.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Loaded="Page_Loaded"
      
      Focusable="True"
      FocusVisualStyle="{x:Null}"
      >

    <Grid Background="White" x:Name="ContentContainer">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
        >
            <TextBlock Text="Ни одна вкладка не открыта"
                       FontWeight="DemiBold"
                       TextAlignment="Center"
                       Margin="0"
                       Style="{DynamicResource Headers}"
            />
            <TextBlock Text="Выберите вкладку:"
                       TextAlignment="Center"
                       FontSize="15"
            />

            <Button Content="Производители"
                    Click="Manufacturers_Click" 
                    Style="{DynamicResource MainPageButtons}"
            />
            <Button Content="Продукция"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Products_Click" 
            />
            <Button Content="Клиенты"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Clients_Click"
            />
            <Button Content="Счет-фактуры"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Invoices_Click"
            />
            <Button Content="Запросы на закупку"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Queries_Click"
            />
            <Button Content="Аптеки"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Pharmacy_Click"
            />
            <Button Content="Сотрудники"
                    Style="{DynamicResource MainPageButtons}"
                    Click="Workers_Click"
            />
            <Button Content="Личный кабинет"
                    Style="{DynamicResource MainPageButtons}"
                    Click="AccountSettings_Click" 
            />
            <Button Content="О нас"
                    Style="{DynamicResource MainPageButtons}"
                    Click="AboutUs_Click" 
            />
        </StackPanel>
    </Grid>
</Page>
