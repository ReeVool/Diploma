<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--ИЗОБРАЖЕНИЯ-->
    <Style TargetType="Image">
        <Setter Property="Width" Value="20"/>
    </Style>

    <!--КНОПКИ-->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="MaxWidth" Value="200"/>

        <Setter Property="MinWidth" Value="30"/>
        <Setter Property="Width" Value="auto"/>
        <Setter Property="Height" Value="30"/>

        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>


            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Style.Resources>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#00bb7a"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                            <ColorAnimation To="White"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="Transparent"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                            <ColorAnimation To="Black"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!--ПАНЕЛИ В КНОПКАХ-->
    <Style x:Key="StackPanelInButtons" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="200"/>

        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="5, 0, 0, 0"/>
                <Setter Property="FontSize" Value="15"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <!-- КНОПКИ НА ГЛАВНОЙ -->
    <Style x:Key="MainPageButtons" TargetType="Button">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="MaxWidth" Value="150"/>

        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#00bb7a"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                                Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>


        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="#00bb7a"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                            <ColorAnimation To="White"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="Transparent"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                            <ColorAnimation To="#00bb7a"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- WARNING КНОПКИ -->
    <Style x:Key="WarningButton" TargetType="Button">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="MaxWidth" Value="160"/>

        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>

        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                                Padding="5">
                        <ContentPresenter HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
            
            <Style TargetType="ToolTip">
                <Setter Property="Background" Value="OrangeRed"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="OrangeRed"/>
                <Setter Property="BorderThickness" Value="0"/>
                
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Style.Resources>
            </Style>
        </Style.Resources>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="OrangeRed"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="Transparent"
                                    Duration="0:0:0.2"
                                    Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>


    <!--ВСПЛЫВАЮЩИЕ ПОДСКАЗКИ-->
    <Style TargetType="ToolTip">
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="#00bb7a"/>
        <Setter Property="Foreground" Value="White"/>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>


    <!--АНИМАЦИЯ ДЛЯ РАЗВОРАЧИВАНИЯ БОКОВОЙ ПАНЕЛИ-->
    <Storyboard x:Key="ExpandStoryboard">
        <DoubleAnimation Storyboard.TargetName="Sidebar"
                             Storyboard.TargetProperty="Width"
                             To="200"
                             Duration="0:0:0.3"/>
    </Storyboard>

    <!--АНИМАЦИЯ ДЛЯ СВОРАЧИВАНИЯ БОКОВОЙ ПАНЕЛИ-->
    <Storyboard x:Key="CollapseStoryboard">
        <DoubleAnimation Storyboard.TargetName="Sidebar"
                             Storyboard.TargetProperty="Width"
                             To="0"
                             Duration="0:0:0.3"/>
    </Storyboard>

    <!--ПОЛЯ ВВОДА-->
    <Style TargetType="TextBox">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="MinWidth" Value="150"/>

        <Setter Property="Height" Value="25"/>

        <Setter Property="Margin" Value="5, 2"/>
        <Setter Property="Padding" Value="2"/>

        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0.5"/>

        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="SelectionBrush" Value="#00bb7a"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border x:Name="Border"
                            CornerRadius="5"
                            BorderThickness="0.5"
                            BorderBrush="Gray"
                            Background="White">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Изменение цвета рамки при фокусе -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#00bb7a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <!--ПОЛЯ ВВОДА ПАРОЛЯ-->
    <Style TargetType="PasswordBox" x:Key="PasswordBoxStyle">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="MinWidth" Value="150"/>

        <Setter Property="Height" Value="25"/>

        <Setter Property="Margin" Value="5, 2"/>
        <Setter Property="Padding" Value="2 -1"/>

        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0.5"/>

        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="SelectionBrush" Value="#00bb7a"/>

        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Border x:Name="Border"
                            CornerRadius="5"
                            BorderThickness="0.5"
                            BorderBrush="Gray"
                            Background="White">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Изменение цвета рамки при фокусе -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="#00bb7a"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <!--ПОЛЯ ВЫБОРА ДАТЫ-->
    <Style TargetType="DatePicker">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="MinWidth" Value="150"/>

        <Setter Property="Height" Value="25"/>

        <Setter Property="Margin" Value="5, 2"/>
        <Setter Property="Padding" Value="2"/>

        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0.5"/>

        <Setter Property="Background" Value="Transparent"/>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="DatePickerTextBox">
        <Setter Property="SelectionBrush" Value="#00bb7a"/>
    </Style>

    <!--ЗАГОЛОВКИ-->
    <Style x:Key="Headers" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="150, 0, 0, 0"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!--ТАБЛИЦЫ-->
    <Style TargetType="DataGrid">
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>

    <Style TargetType="DataGridRow">
        <Setter Property="MinHeight" Value="25"/>
    </Style>

    <Style TargetType="DataGridRowHeader">
        <Setter Property="Background" Value="#0a000000"/>
    </Style>

    <Style TargetType="DataGridCell">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#00bb7a"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--ЧЕКБОКСЫ-->
    <Style TargetType="CheckBox">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="MinWidth" Value="150"/>

        <Setter Property="Height" Value="25"/>

        <Setter Property="Margin" Value="5, 2"/>
        <Setter Property="Padding" Value="2"/>

        <Setter Property="VerticalContentAlignment" Value="Center"/>

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
                <Setter Property="Width" Value="13"/>
                <Setter Property="Height" Value="13"/>
            </Style>
        </Style.Resources>
    </Style>
    
</ResourceDictionary>